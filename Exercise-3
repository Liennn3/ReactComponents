import {useState} from 'react';
import { View, StyleSheet, Button, Alert, TextInput } from 'react-native'

function myString(){

  const [str, setInput] = useState ("");

  const handleString = (text) => {
    setInput(text);
  };

  const handleReverse = () => {
  const reverse = (str.split("").reverse().join(""));
  Alert.alert('Result: ', reverse.toString());
  };

  return(
    <View style={styles.container}>
    <TextInput style={styles.border} value={str} onChangeText={handleString} placeholder="Enter a String" />
    <Button title="Reverse" onPress={handleReverse} />
    </View>
  );
}

const styles = StyleSheet.create({
  container: {
    flex: 1,
    justifyContent: 'center',
    alignItems: 'center',
  },

  border: {
    borderColor: "black",
    borderWidth: 1,
    padding: 10,
    margin: 10,
  },
});

export default myString;
